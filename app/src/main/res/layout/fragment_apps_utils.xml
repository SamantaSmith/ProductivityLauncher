<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="UTILS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/sber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Sberbank"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/profi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Profi.ru"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Settings"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Clock"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/nike_run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Nike Run"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/elki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Электрички"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/drive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Google Drive"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Google Maps"
        android:textColor="@color/silver"
        android:textSize="20sp" />


    <TextView

        android:id="@+id/moonreader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Moon Reader"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/lplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• LPlayer"
        android:textColor="@color/silver"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/notion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="• Notion"
        android:textColor="@color/silver"
        android:textSize="20sp" />

</LinearLayout>